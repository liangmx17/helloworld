{
  "name": "novel",
  "displayName": "novel",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "novel.new_character",
        "title": "New Character"
      },
      {
        "command": "novel.new_plot",
        "title": "New Plot"
      },
      {
        "command": "novel.new_scene",
        "title": "New Scene"
      },
      {
        "command": "novel.new_other",
        "title": "New Other"
      },
      {
        "command": "novel.ohmygosh",
        "title": "ohmygosh"
      },
      {
        "command": "novel.currentTime",
        "title": "Time"
      },
      {
        "command": "novel.start-writing",
        "title": "Write!"
      },
      {
        "command": "novel.wordCount",
        "title": "wordCount"
      }

      
    ],

    "viewsContainers": {
      "activitybar": [
        {
          "id": "novel-structure",
          "title": "Book",
          "icon": "resource/book-solid.svg"
        }
      ]
    },
    "views": {
      "novel-structure": [
        {
          "id": "novel-main-characters",
          "name": "Main Characters"
        },
        {
          "id": "novel-minor-characters",
          "name": "Minor Characters"
        }
      ]
    },

    "viewsWelcome": [
      {
        "view": "novel-main-characters",
        "contents": "请完善主要人物"
      },
      {
        "view": "novel-minor-characters",
        "contents": "请完善次要人物"

      }
      
    ],

  "menus": {
      "editor/context": [
          {
              "when": "editorFocus",
              "command": "novel.currentTime",
              "group": "navigation"
          }
      ]
  }


  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
